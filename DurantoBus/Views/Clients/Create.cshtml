@model DurantoBus.Models.ViewModels.ClientVM

@{
    ViewData["Title"] = "Create";
}





<form asp-action="Create" asp-controller="Clients" enctype="multipart/form-data" method="post">
    <div class="row  ">
        <div class="col-md-6 table-light shadow">
            <h4 class="text-center bg-primary">Client Add</h4>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group bg-info">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group bg-info">
                <label asp-for="Age" class="control-label"></label>
                <input asp-for="Age" class="form-control" />
                <span asp-validation-for="Age" class="text-danger"></span>
            </div>
            <div class="form-group bg-info">
                <label asp-for="DateofBirth" class="control-label"></label>
                <input asp-for="DateofBirth" class="form-control" type="date" />
                <span asp-validation-for="DateofBirth" class="text-danger"></span>
            </div>
            <div class="form-group form-check bg-info">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IsActive" /> @Html.DisplayNameFor(model => model.IsActive)
                </label>
            </div>
            <div class="form-group bg-info">
                <label asp-for="PicturePath" class="control-label"></label>
                <input asp-for="PicturePath" class="form-control" type="file" />
                <span asp-validation-for="PicturePath" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-outline-primary shadow" />
            </div>
        </div>
        <div class="col-6 table-light shadow ">
            <h4 class="text-center bg-primary">Station Add</h4>
            <div class="d-flex justify-content-end">
                <a id="btnPlus" href="" class="btn btn-outline-success shadow btn-sm">Add</a>
            </div>
            <div id="StationContainer">
                <script>
                    LoadStation();
                </script>
            </div>

        </div>
    </div>
</form>


<div>
    <a asp-action="Index" class="btn btn-outline-primary shadow">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

}