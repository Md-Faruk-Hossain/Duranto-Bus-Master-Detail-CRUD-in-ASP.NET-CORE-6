@model IEnumerable<DurantoBus.Models.Client>

@{
    ViewBag.Title = "Index";
}

<h2 class="btn-primary text-center"> Client List</h2>

<p>
    
    <a class="btn btn-outline-primary shadow btn-sm" asp-action="Create" asp-controller="Clients">Create</a>
</p>

@foreach (var item in Model)
{
    <div class="card shadow table-light">
        <div class="card-header d-flex justify-content-between">
            <div>
                <img src="@item.Picture" width="50" height="50" class="mr-2  rounded-circle" />
                Name : @item.Name
                Age  : @item.Age
                
            </div>
            
        </div>
        <div class="card-body">
            <table class="table table-bordered table-striped table-sm">
                <thead>
                    <tr>
                        <th>StationId</th>
                        <th>StationName</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var singleAdd in item.BookingEntries)
                    {
                        <tr>
                            <td>@singleAdd.StationId</td>
                            <td>@singleAdd.Station.StationName</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <div>

            <a class="btn btn-outline-primary shadow btn-sm" asp-action="Edit" asp-controller="Clients" asp-route-id="@item.ClientId">Edit</a>
            <a class="btn btn-outline-danger shadow btn-sm" asp-action="Delete" asp-controller="Clients" asp-route-id="@item.ClientId">Delete</a>
        </div>
    </div>
}